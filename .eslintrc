{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "no-extra-semi": 2,
    "valid-jsdoc": "error",
    "no-var": 2,
    "eqeqeq": [2, "smart"],
    "arrow-parens": [2, "always"],
    "consistent-this": 0,
    "func-names": [2],
    "generator-star-spacing": [2, "after"],
    "indent": [2, 2],
    "jsx-quotes": [1, "prefer-double"],
    "quotes": [2, "backtick"],
    "max-len": [1, 100, 2],
    "new-cap": [2, {"capIsNew": false}],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-unused-vars": [2, {"vars": "all", "varsIgnorePattern": "^__style" }],
    "object-curly-spacing": 0,
    "one-var": 0,
    "operator-linebreak": [2, "after"],
    "prefer-reflect": 0,
    "space-before-function-paren": [2, "never"],
    "strict": 0,
    "no-shadow": [2, { "builtinGlobals": false, "hoist": "all" }],
    "import/named": 2,
    "import/no-mutable-exports": 2,
    "import/order": 2,
    "import/extensions": [2, {
      "js": "never",
      "validation": "always",
      "task": "always"
    }]
  },
  "extends": ["standard"],
  "plugins": ["babel", "fp", "import"]
}
